<resources>

    <!-- Colors -->
    <color name="shadow_endColor">#d3d3d3</color>
    <color name="shadow_startColor">#00ffffff</color>
    <color name="color_window_background">#ffffff</color>
    <color name="colorPrimary">#43a047</color>
    <color name="colorPrimaryDark">#2e7d32</color>
    <color name="colorAccent">#00c853</color>
    <color name="colorTextPrimary">#000</color>
    <color name="colorTextSecondary">#000</color>

    <!-- Themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_window_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_window_background</item>
    </style>

    <style name="TextAppearance_tabs" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">11sp</item>
    </style>

</resources>
